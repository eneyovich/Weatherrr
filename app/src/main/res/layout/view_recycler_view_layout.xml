<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_background">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/recycler_view_margin_top"
        android:layout_marginStart="@dimen/recycler_view_margins"
        android:layout_marginEnd="@dimen/recycler_view_margins"
        android:layout_marginBottom="@dimen/recycler_view_margins"
        app:cardCornerRadius="@dimen/card_view_elevation_radius"
        app:cardElevation="@dimen/card_view_elevation_radius"
        app:contentPadding="@dimen/recycler_view_content_padding"
        app:cardBackgroundColor="#00000000">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"/>

    </android.support.v7.widget.CardView>
</FrameLayout>