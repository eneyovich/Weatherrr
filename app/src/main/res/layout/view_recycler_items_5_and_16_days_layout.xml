<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:orientation="horizontal"
    android:weightSum="1">

    <TextView
        android:id="@+id/text_time_5_16_days"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.27"
        android:layout_marginStart="@dimen/item_5_16_text_time_margin_start"
        android:layout_gravity="center"
        android:fontFamily="cursive"
        android:textSize="@dimen/item_5_16_text_time_size"
        android:textColor="@android:color/black"/>

    <ImageView
        android:id="@+id/image_forecast_5_16_days"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.31"
        android:paddingEnd="@dimen/item_5_16_image_padding_end"
        android:contentDescription="@string/image_descript"
        tools:ignore="RtlSymmetry"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.42"
        android:orientation="vertical">


        <TextView
            android:id="@+id/text_temp_5_16_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_5_16_text_temp_margin_top"
            android:textSize="@dimen/item_5_16_text_temp_size"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/text_weather_data_5_16_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_5_16_text_weather_data_margin_top"
            android:textSize="@dimen/item_5_16_text_weather_data_size"
            android:textColor="@android:color/black"/>

    </LinearLayout>

</LinearLayout>